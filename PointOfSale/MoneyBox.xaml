<UserControl x:Class="PointOfSale.MoneyBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="225" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button FontSize="50" Grid.Column="0" Click="IncrementButton_Click">+</Button>
        <TextBlock FontSize="50" Name="amount" Text="{Binding Path=Number}" Grid.Column="1"></TextBlock>
        <Button FontSize="50" Grid.Column="2" Click="DecrementButton_Click">-</Button>
        <TextBlock Grid.Column="3"></TextBlock>
        
    </Grid>
</UserControl>
