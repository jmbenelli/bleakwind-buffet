@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

@using BleakwindBuffet.Data;
@using BleakwindBuffet.Data.Entrees;
@using BleakwindBuffet.Data.Sides;
@using BleakwindBuffet.Data.Drinks;
@using BleakwindBuffet.Data.Enums;

<form id="Menu">
    <div id="search">
        <input type="text" name="SearchTerms" value="@Model.SearchTerms" />
        <input type="submit" value="Search">
    </div>

    <div id="filters">

        <h4>Category</h4>
        @foreach (String category in Menu.Categories)
        {
            <label>
                <input type="checkbox" name="Categories" value="@category"/>
                @category
            </label>
        }

        <h4>Calories</h4>
        <div>
            Between
            <input name="MinCal" type="number" min="0" max="10000" step="1" placeholder="min" />
            and
            <input name="MaxCal" type="number" min="0" max="10000" step="1" placeholder="min" />
        </div>

        <h4>Price</h4>
        <div>
            Between
            <input name="MinPrice" type="number" min="0" max="100" step=".01" placeholder="min" />
            and
            <input name="MaxPrice" type="number" min="0" max="100" step=".01" placeholder="min" />
        </div>

    </div>
</form>



<div class="text-center">
    <h1 class="display-4">Bleakwind Buffet</h1>

    <p>We at Bleakwind Buffet are proud to bring you authentic fantasy meals straight from the world of Skyrim. Shake the blood off your sword and sake your thirst with one of our old-fashioned sailor sodas. Hack into a Smokehouse Skeleton with your dagger. Or vanquish the the mighty Thalmor Triple Burger! You’ve had a hard adventure and earned your loot, so spend it with us!.</p>

    <p>Any purchase that contains an Entree, Side, and Drink will result in a $1 discout.</p>

    <p>
        Soda Flavors are Blackberry, Cherry, Grapefruit, Lemon, Peach, Watermelon
    </p>

    <div class="flex-columns">
        <div>
            <h1>Entrees</h1>
            @foreach (var item in Model.MenuItems)
            {
                var myObject = item as Entree;
                if (myObject != null)
                {
                    <h4 class="name">@item.ToString()</h4>
                    <div>Description: @item.Description</div>
                    <div>Price: $@item.Price</div>
                    <div>Calories: @item.Calories</div>

                }

            }
        </div>
        <div>
            <h1>Sides</h1>
            @foreach (var item in Model.MenuItems)
            {

                @foreach (Size size in Enum.GetValues(typeof(Size)))
                {
                    var myObject = item as Side;
                    if (myObject != null)
                    {
                        <h4 class="name">@item.ToString()</h4>
                        <div>Description: @item.Description</div>
                        <div>Price :$@item.Price</div>
                        <div>Calories: @item.Calories</div>

                    }

                }
            }
        </div>
        <div>
            <h1>Drinks</h1>
            @foreach (var item in Model.MenuItems)
            {

                @foreach (Size size in Enum.GetValues(typeof(Size)))
                {
                    var myObject = item as Drink;
                    if (myObject != null)
                    {
                        <h4 class="name">@item.ToString()</h4>
                        <div>Description: @item.Description</div>
                        <div>Price: $@item.Price</div>
                        <div>Calories: @item.Calories</div>

                    }

                }
            }
        </div>
    </div>

</div>
